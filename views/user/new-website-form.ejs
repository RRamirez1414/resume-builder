<%- include('../partials/header.ejs') %>

<div class="flex-column mt-3">
  <div class="d-flex justify-content-center"><h1 class="headers user">Resume Form Page</h1></div>
  <div class="d-flex justify-content-center"><h3 class="headers">Create New Web Page</h3></div>
  <hr class="sep">
</div>

<div class="container-fluid mt-3 w-75 interface-design p-4">
  <form action="/user/save-resume" method="POST">
    <input type="text" hidden name="username" id="username" value="<%= username %>">
    <div class="row">
      <!--classes such as form-control are styles from bootstrap-->
      <div class="col-12 mb-3">
        <label for="siteTitle">Website Title:</label>
        <input
          class="form-control input-lg input-style"
          type="text"
          name="siteTitle"
          id="siteTitle"
          placeholder="title..."
          required
        />
      </div>
      <div class="col-6 mb-3">
        <label for="address">Address: </label>
        <input class="form-control input-lg input-style" type="text" name="address" id="address" placeholder="address..">
      </div>

      <div class="col-3 mb-3">
        <label for="phone1Type">Phone 1: </label>
        <div class="input-group">
          <div class="input-group-prepend">
            <select name="phone1Type" id="phone1Type" class="form-control input-style">
              <option value="">Type</option>
              <option value="Cell">Cell</option>
              <option value="Mobile">Mobile</option>
              <option value="Home">Home</option>
              <option value="Work">Work</option>
            </select>
          </div>
          <input class="form-control input-lg input-style" type="text" name="phone1" id="phone1" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="phone 1...">
        </div> 
      </div>

      <div class="col-3 mb-3">
        <label for="phone2Type">Phone 2: </label>
        <div class="input-group">
          <div class="input-group-prepend">
            <select name="phone2Type" id="phone2Type" class="form-control input-style">
              <option value="">Type</option>
              <option value="Cell">Cell</option>
              <option value="Mobile">Mobile</option>
              <option value="Home">Home</option>
              <option value="Work">Work</option>
            </select>
          </div>
          <input class="form-control input-lg input-style" type="text" name="phone2" id="phone2" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="phone 2...">
        </div> 
      </div>

      <div class="col-3 mb-3">
        <label for="email1">Email 1:</label>
        <input type="text" class="form-control input-lg input-style" name="email1" id="email1" placeholder="email 1...">
      </div>

      <div class="col-3 mb-3">
        <label for="email2">Email 2:</label>
        <input type="text" class="form-control input-lg input-style" name="email2" id="email2" placeholder="email 2...">
      </div>

      <div class="col-3 mb-3">
        <label for="link1">Personal Link 1:</label>
        <input type="text" class="form-control input-lg input-style" name="link1" id="link1" placeholder="link 1...">
      </div>

      <div class="col-3 mb-3">
        <label for="link2">Peronsal Link 2:</label>
        <input type="text" class="form-control input-lg input-style" name="link2" id="link2" placeholder="link 2...">
      </div>

      <div class="col-12 mb-3">
        <label for="profSum">Professional Summary:</label></label>
        <textarea
          class="form-control input-sm input-style"
          type="text"
          name="profSum"
          id="profSum"
          placeholder="biography...."
          rows="5"
          required
        ></textarea>
      </div>

      <div class="col-12 mb-3">
        <label for="Skills">Skills</label>
        <select name="Skills" id="skills" multiple="multiple" class="form-control input-style input-sm">
          <option value="" selected disabled>Add Skills...</option>
        </select>
      </div>
      <div class="col-12 mb-3">
        <label for="">Education</label>
        <button type="button" id="addEducation" title="Add Education" class="btn btn-info ml-2 resume-add-btn"><i class="fas fa-sm fa-plus"></i></button>
        <div id="educationSection" class="row"></div>
      </div>
      <div class="col-12 mb-3">
        <label for="">Experience</label>
        <button type="button" id="addExperience" title="Add Experience" class="btn btn-info ml-2 resume-add-btn"><i class="fas fa-sm fa-plus"></i></button>
        <div id="experienceSection" class="row">
        </div>
      </div>
    </div>
    
    <div class="">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>

<script type="text/javascript">
  $(document).ready(function() { 
      $('#skills').select2({tags: true});
      //keep track of dynamically generated education and experience
      var eduCount = 0;
      var expCount = 0;

      //process to dynamically create education information
      $('#addEducation').on('click', function(e) {
        e.preventDefault();
        if($("#institution_" + eduCount).length == 0){
          $('#educationSection').append(`
            <div class="col-12 mb-3">
              <label for="institution">Institution: </label>
              <input type="text" class="form-control input-lg input-style" name="institution" id="institution_`+eduCount+`" placeholder="Institution Name...">
            </div>
            <div class="col-4 mb-3">
              <label for="achieved">Degree</label>
              <input type="text" class="form-control input-lg input-style" name="achieved" id="achieved_`+eduCount+`" placeholder="AS, BS, MS, PHD etc...">
            </div>
            <div class="col-4 mb-3">
              <label for="program">Program</label>
              <input type="text" class="form-control input-lg input-style" name="program" id="program_`+eduCount+`" placeholder="Program Name...">
            </div>
            <div class="col-4 mb-3">
              <label for="gradYear">Grad Year</label>
              <input type="number" min="1900" max="2099" step="1" class="form-control input-lg input-style" name="gradYear" id="gradYear_`+eduCount+`" placeholder="Graduation Year..."/>
            </div>
            <div class="col-3 mb-3">
              <label for="graduated">Graduated</label>
              <select name="graduated" id="graduated_`+eduCount+`" class="form-control input-style input-lg">
                <option value="" disabled selected>Select One</option>
                <option value="Y">Yes</option>
                <option value="N">No</option>
              </select>
            </div>
            <div class="col-6 mb-3">
              <label for="city">City</label>
              <input type="text" class="form-control input-lg input-style" name="city" id="city_`+eduCount+`">
            </div>
            <div class="col-3 mb-3">
              <label for="state">State</label>
              <select name="state" id="state_`+eduCount+`" class="form-control input-style input-lg">
                <option value="" disabled selected>Select State</option>
                <% states.forEach(state => { %>
                  <option value="<%= state.stateCode %> "><%= state.stateDesc %> </option>
                <% }) %>
              </select>
            </div>
          `);
          eduCount++;  
        }
      });

      //process to dynamically create experience information
      $('#addExperience').on('click', function(e) {
        e.preventDefault();
        if($("#expName_" + expCount).length == 0){
          $('#experienceSection').append(`
            <div class="col-12 mb-3">
              <label for="expName">Experience Name: </label>
              <input type="text" class="form-control input-lg input-style" name="expName" id="expName_`+expCount+`" placeholder="Exprience Name...">
            </div>
            <div class="col-4 mb-3">
              <label for="title">Title: </label>
              <input type="text" class="form-control input-lg input-style" name="title" id="title_`+expCount+`" placeholder="Title...">
            </div>
            <div class="col-2 mb-3">
              <label for="fromMonth">From Month:</label>
              <select name="fromMonth" id="fromMonth_`+expCount+`" class="form-control input-style input-lg">
                <option value="" disabled selected>Select Month</option>
                <% months.forEach(month => { %>
                  <option value="<%= month.monthCode %> "><%= month.monthDesc %> </option>
                <% }) %>
              </select>
            </div>
            <div class="col-2 mb-3">
              <label for="fromYear">From Year</label>
              <input type="number" min="1900" max="2099" step="1" class="form-control input-lg input-style" name="fromYear" id="fromYear_`+eduCount+`" placeholder="From Year..."/>
            </div>
            <div class="col-2 mb-3">
              <label for="toMonth">To Month:</label>
              <select name="toMonth" id="toMonth_`+expCount+`" class="form-control input-style input-lg">
                <option value="" disabled selected>Select Month</option>
                <% months.forEach(month => { %>
                  <option value="<%= month.monthCode %> "><%= month.monthDesc %> </option>
                <% }) %>
              </select>
            </div>
            <div class="col-2 mb-3">
              <label for="toYear">to Year</label>
              <input type="number" min="1900" max="2099" step="1" class="form-control input-lg input-style" name="toYear" id="toYear_`+eduCount+`" placeholder="to Year..."/>
            </div>
            <div class="col-6 mb-3">
              <label for="expCity">City</label>
              <input type="text" class="form-control input-lg input-style" name="expCity" id="expCity_`+expCount+`">
            </div>
            <div class="col-3 mb-3">
              <label for="expState">State</label>
              <select name="expState" id="expState_`+expCount+`" class="form-control input-style input-lg">
                <option value="" disabled selected>Select State</option>
                <% states.forEach(state => { %>
                  <option value="<%= state.stateCode %> "><%= state.stateDesc %> </option>
                <% }) %>
              </select>
            </div>
            <div class="col-12 mb-3">
              <label for="description">Description:</label></label>
              <textarea
                class="form-control input-sm input-style"
                type="text"
                name="description"
                id="description_`+expCount+`"
                placeholder="Description...."
                rows="5"
                required
              ></textarea>
            </div>
            <div class="col-12 mb-3">
              <label for="jobDuties">Job Duties:</label></label>
              <textarea
                class="form-control input-sm input-style"
                type="text"
                name="jobDuties"
                id="jobDuties_`+expCount+`"
                placeholder="Job Duties...."
                rows="5"
                required
              ></textarea>
            </div>
          `);
          expCount++;
        }
      });
  });
</script>

