<%- include('../partials/header.ejs') %>

<div class="log-sign">
    <div class="container-fluid mt-5 w-25 interfacer-design">
        <div class="d-flex justify-content-center"><h1 class="headers">Log-in</h1></div>
        <form method="POST" action="">
            <div class="login-prompt">
                <label for="login-username">Username:</label>
                <input type="text" name="login-username" id="login-username" placeholder="username..." />
            </div>
            <div class="login-prompt">
                <label for="login-password">Password:</label>
                <input type="text" name="login-Password" id="login-Password" placeholder="password..." />
            </div>
        </form>
    </div>
    <div class="container-fluid mt-5 w-25 interfacer-design">
        <div class="d-flex justify-content-center"><h1 class="headers">Sign-up</h1></div>
        <form method="POST" action="">
            <div class="login-prompt">
                <label for="signup-firstname">First Name:</label>
                <input type="text" name="signup-firstname" id="signup-firstname" placeholder="first name..." />
            </div>
            <div class="login-prompt">
                <label for="signup-lastname">Last Name:</label>
                <input type="text" name="signup-lastname" id="signup-lastname" placeholder="last name..." />
            </div>
            <div class="login-prompt">
                <label for="signup-username">Username:</label>
                <input type="text" name="signup-username" id="signup-username" placeholder="username..." />
            </div>
            <div class="login-prompt">
                <label for="signup-password">Password:</label>
                <input type="text" name="signup-Password" id="signup-Password" placeholder="password..." />
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer.ejs") %>